{
  "dependencies": {
    "@elysiajs/cors": "^0.7.0",
    "@elysiajs/jwt": "1.2.0",
    "@prisma/client": "^5.0.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "elysia": "^1.2.11",
    "iyzipay": "^2.0.48",
    "kafkajs": "^2.2.4",
    "prom-client": "^15.1.3",
    "prometheus-client": "^0.1.1",
    "stripe": "^12.0.0",
    "winston": "^3.10.0",
    "winston-elasticsearch": "^0.19.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/prettier": "^3.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "jest-mock-extended": "^3.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "prisma": "^5.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev src/index.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json,md}": [
      "prettier --write"
    ]
  }
}
